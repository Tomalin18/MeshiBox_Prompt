{
  "expo": {
    "name": "MeishiBox",
    "slug": "meishibox",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meishibox.app",
      "infoPlist": {
        "NSCameraUsageDescription": "名刺をスキャンするためにカメラを使用します",
        "NSPhotoLibraryUsageDescription": "名刺の画像を選択するためにフォトライブラリにアクセスします",
        "NSContactsUsageDescription": "名刺の情報を連絡先に追加するために使用します",
        "NSMicrophoneUsageDescription": "このアプリはマイクを使用しません"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.meishibox.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "名刺をスキャンするためにカメラを使用します"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "名刺の画像を選択するためにフォトライブラリにアクセスします"
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "名刺の情報を連絡先に追加するために使用します"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
